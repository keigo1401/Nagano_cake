<div class="container">
  <h2>注文履歴一覧</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @admins_orders.each do |p| %>
      <tr>
        <td><%= link_to p.purchase_date.strftime("%Y-%m-%d %H:%M"), admin_orders_path(p.id), data: {"turbolinks" => false} %></td>
        <td><%= p.customers.last_name %><%= p.customers.first_name %></td>
        <td><%= p.order_details.quantity %></td>
        <td><%= p.orders.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
