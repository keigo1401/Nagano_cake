<div class="container">
  <h2>商品一覧</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th colspan="3"></th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @admins_items.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= link_to p.name, admin_items_path(p.id) %></td>
        <td><%= p.price %></td>
        <td><%= p.genres.name %></td>
        <td><%= p.is_active %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @admins_items, class: "paginate" %>
</div>
