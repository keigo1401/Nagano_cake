<div class="col-md-3">
  <h2 class="mt-3">ジャンル一覧・追加</h2>
  <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
  <div class="form-group">
    <label for="genre_name">ジャンル名</label>
    <%= f.text_field :name, class:"form-control genre_name" %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  <% end %>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @admins_genres.each do |p| %>
      <tr>
        <td><%= p.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(p), class:"btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>