<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h2>ジャンル</h2>

  		  <!--エラーメッセージ-->
        <% if @genre.errors.any? %>
        <div id="error_explanation">
          <h3><%= @genre.errors.count %> errors prohibited this obj from being saved:</h3>
          <%= @genre.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
          <% end %>
        </div>
        <% end %>

  		<%= form_with model:@genre, url: admin_genre_path, local:true do |f| %>
  		<div class="form-group">
  		  <label for="genre_name">ジャンル名</label>
  		  <%= f.text_field :name, class:"form-control genre_name", id:"genre_name" %>
  		</div>
  		<div class="form-group">
  		  <%= f.submit "変更を保存", class:"btn btn-success" %>
  		</div>
  		<% end %>
  	</div>
  </div>
</div>