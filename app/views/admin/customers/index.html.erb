<div class="container">
  <h2>会員一覧</h2>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= link_to p.last_name, admin_customer_path(p.id) %><%= link_to p.first_name, admin_customer_path(p.id) %></td>
        <td><%= p.email %></td>
        <td>
          <% if p.is_active == TRUE %>
          　有効
          <% else %>
          　退会
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @customers, class: "paginate" %>
</div>
