<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

  		  <!--エラーメッセージ-->
        <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h3><%= @customer.errors.count %> errors prohibited this obj from being saved:</h3>
          <%= @customer.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
          <% end %>
        </div>
        <% end %>

  		<div class="form-group">
        <label for="customer_id">会員ID</label>
        <%= @customer.id %>
      </div>
      <%= form_with model:@customer, url:"/admin/customers/#{@customer.id}", local:true do |f| %>
  		<div class="form-group">
  		  <label for="customer_name">氏名</label>
  		  <%= f.text_field :last_name, class:"form-control customer_name", id:"customer_name" %>
  		  <%= f.text_field :first_name, class:"form-control customer_name", id:"customer_name" %>
  		</div>
    	<div class="form-group">
  		  <label for="customer_name_kana">フリガナ</label>
  		  <%= f.text_field :last_name_kana, class:"form-control customer_name_kana", id:"customer_name_kana" %>
  		  <%= f.text_field :first_name_kana, class:"form-control customer_name_kana", id:"customer_name_kana" %>
  		</div>
  		<div class="form-group">
  		  <label for="postal_code">郵便番号</label>
  		  <%= f.text_field :postal_code, class:"form-control postal_code", id:"postal_code" %>
  		</div>
  		<div class="form-group">
  		  <label for="address">住所</label>
  		  <%= f.text_field :address, class:"form-control address", id:"address" %>
  		</div>
  		<div class="form-group">
  		  <label for="telephone_number">電話番号</label>
  		  <%= f.text_field :telephone_number, class:"form-control telephone_number", id:"telephone_number" %>
  		</div>
  		<div class="form-group">
  		  <label for="email">メールアドレス</label>
  		  <%= f.text_field :email, class:"form-control email", id:"email" %>
  		</div>
  		<div class="form-group">
  		  <label for="is_status">会員ステータス</label>
  		  <%= f.radio_button :is_active, "TRUE" %>有効
  		  <%= f.radio_button :is_active, "FALSE" %>退会
  		</div>
  		<div class="form-group">
  		  <%= f.submit "変更を保存", class:"btn btn-success" %>
  		</div>
  		<% end %>
  	</div>
  </div>
</div>