<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h2>商品編集</h2>

  		  <!--エラーメッセージ-->
        <% if @item.errors.any? %>
        <div id="error_explanation">
          <h3><%= @item.errors.count %> errors prohibited this obj from being saved:</h3>
          <%= @item.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
          <% end %>
        </div>
        <% end %>

  		<%= form_with model:@item, url:"/admin/items/#{@item.id}", local:true do |f| %>
  		<div class="form-group">
        <label for="image_id">商品画像</label>
        <%= f.attachment_field :image, class:"form-control image_id", id:"image_id" %>
      </div>
  		<div class="form-group">
  		  <label for="item_name">商品名</label>
  		  <%= f.text_field :name, class:"form-control item_name", id:"item_name" %>
  		</div>
  		<div class="form-group">
  		  <label for="item_detail">商品説明</label>
  		  <%= f.text_area :introduction, class:"form-control introduction", id:"introduction" %>
  		</div>
  		<div class="form-group">
  		  <label for="genre">ジャンル</label>
  		  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
  		</div>
  		<div class="form-group">
  		  <label for="price">税抜き価格</label>
  		  <%= f.text_field :price, class:"form-control price", id:"price" %>
  		</div>
  		<div class="form-group">
  		  <label for="is_status">販売ステータス</label>
  		  <%= f.radio_button :is_active, "TRUE" %>販売中
  		  <%= f.radio_button :is_active, "FALSE" %>販売停止中
  		</div>
  		<div class="form-group">
  		  <%= f.submit "新規登録", class:"btn btn-success" %>
  		</div>
  		<% end %>
  	</div>
  </div>
</div>