<div class="container">
  <h1>注文履歴詳細</h1>
    <div class="row">
      <div class="col-md-2">
        <h3><strong>購入者</strong></h3>
        <h3><strong>注文日</strong></h3>
        <h3><strong>配送先</strong></h3>
        <h3><strong>支払方法</strong></h3>
      </div>
      <div class="col-md-10">
        <h3><%= @customer.last_name %><%= @customer.first_name %></h3>
        <h3><%= @order.created_at.strftime('%Y/%m/%d') %></h3>
        <h3><%= @order.address %></h3>
        <h3><%= @order.payment_method_i18n %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <%= form_with model:@order, :url => { :controller => :orders, :action => :update } do |f| %>

          <% if @order.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h3><%= @order.errors.count %>error prohibited this obj from being saved:</h3>
            <ul>
             <% @order.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <% end %>
            </ul>
          </div>
          <% end %>

          <h3>注文ステータス</h3>
          <%= f.select :status, Order.status_i18n.keys.map { |k| [Order.status_i18n[k]} %>
          <%= f.submit '更新', class: "btn btn-primary" %>
        <% end %>


        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order_product.each do |p| %>
             <tr>
              <td><%= p.items.name %></td>
              <td><%= p.price_tax_included %></td>
              <td><%= p.quantity %></td>
              <td><%= p.price_tax_included*p.quantity %></td>
              <%= form_with model:@order_detail url:"/admin/order_products/#{@order_product.id}" local:true do |f| %>
                <td><%= f.select :making_status, OrderDetail.making_status_i18n.keys.map { |k| [OrderDetail.making_status_i18n[k]} %></td>
                <td><%= f.submit '更新', class: "btn btn-primary" %></td>
              <% end %>
             </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-2">
        <h3>商品合計</h3>
        <h3>送料</h3>
        <h3>請求金額合計</h3>
      </div>
      <div class="col-md-2">
        <h3><%= @order.total_payment - @order.shipping_cost %>円</h3>
        <h3><%= @order.shipping %>円</h3>
        <h3><%= @order.total_payment %>円</h3>
      </div>
    </div>
</div>